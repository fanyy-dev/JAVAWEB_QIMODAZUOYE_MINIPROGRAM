.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #ffffff;
  display: flex;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
}

.emoji {
  font-size: 48rpx;
  line-height: 1;
  margin-bottom: 4rpx;
  filter: grayscale(100%);
  opacity: 0.6;
  transition: all 0.3s;
}

.emoji.selected {
  filter: grayscale(0%);
  opacity: 1;
  transform: scale(1.1);
}

.text {
  font-size: 20rpx;
  color: #666666;
  transition: color 0.3s;
}

.text.selected {
  color: #ff6b35;
  font-weight: 500;
}
