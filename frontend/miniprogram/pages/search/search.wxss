/* pages/search/search.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 16rpx 24rpx;
}

.search-input {
  flex: 1;
  margin: 0 16rpx;
  font-size: 28rpx;
}

.search-cancel {
  margin-left: 20rpx;
  color: #ff6b6b;
  font-size: 28rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-clear {
  font-size: 26rpx;
  color: #999;
}

.history-section, .hot-section {
  background: #fff;
  margin-bottom: 20rpx;
}

.history-tags, .hot-tags {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx 30rpx;
}

.history-tag, .hot-tag {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666;
  margin: 0 20rpx 20rpx 0;
}

.result-section {
  background: #fff;
}

.result-tabs {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #ff6b6b;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #ff6b6b;
  border-radius: 2rpx;
}

.dish-list, .store-list {
  padding: 0 30rpx;
}

.dish-item, .store-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.dish-image, .store-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.dish-info, .store-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name, .store-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.dish-desc {
  font-size: 26rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-bottom, .store-meta {
  display: flex;
  align-items: center;
}

.dish-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.dish-sales {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.store-rating {
  font-size: 24rpx;
  color: #f59e0b;
}

.store-price {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.store-address {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.empty {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
