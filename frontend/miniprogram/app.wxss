/* app.wxss */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.container {
  padding: 20rpx;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
}

.btn-default {
  background-color: #fff;
  color: #333;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 图片样式 */
.image-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.tag-primary {
  background-color: #fff3e6;
  color: #ff6b6b;
}

.tag-success {
  background-color: #e6fff2;
  color: #52c41a;
}

/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 价格样式 */
.price {
  color: #ff6b6b;
  font-weight: bold;
}

.price-symbol {
  font-size: 24rpx;
}

.price-integer {
  font-size: 40rpx;
}

.price-original {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 团购价格区 */
.group-buy-price {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  margin-top: 8rpx;
}

.current-price {
  color: #ff6b6b;
  font-weight: bold;
  display: flex;
  align-items: baseline;
}

.original-price-wrapper {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-right: 4rpx;
}

.price-label-gray {
  font-size: 22rpx;
  color: #999;
  margin-right: 4rpx;
}

/* 团购滚动区 */
.group-buy-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.group-buy-item {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  vertical-align: top;
  white-space: normal;
}

.group-buy-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.group-buy-info {
  padding: 0 8rpx;
}

.group-buy-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.group-buy-sales {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
